<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <include
        android:visibility="visible"
        android:id="@+id/layout_appbar"
        layout="@layout/layout_toolbar_home" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_appbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/layout_profile_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_between_layout"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:id="@+id/layout_profile_image"
                    android:layout_width="@dimen/imageview_width_height"
                    android:layout_height="@dimen/imageview_width_height">

                    <ProgressBar
                        android:layout_centerInParent="true"
                        android:id="@+id/img_progress_bar"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/img_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/profile_rounded"
                        android:tint="@color/white" />

                    <View
                        android:id="@+id/view_plus"
                        android:layout_width="@dimen/plus_circle_width_height"
                        android:layout_height="@dimen/plus_circle_width_height"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="0dp"
                        android:background="@drawable/plus_icon" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_between_layout"
                    android:layout_marginEnd="@dimen/padding_between_layout"
                    android:layout_toEndOf="@+id/layout_profile_image">

                    <TextView
                        android:fontFamily="@font/oswald_medium"
                        android:id="@+id/tv_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/padding_between_layout_small"
                        android:layout_marginBottom="@dimen/padding_between_layout_small"
                        android:text="Batman"
                        android:textColor="@color/white" />

                    <TextView
                        android:fontFamily="@font/oswald_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_profile_name"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/background_outlined_textview"
                        android:paddingStart="@dimen/padding_between_layout_small"
                        android:paddingTop="@dimen/padding_between_layout_inner"
                        android:paddingEnd="@dimen/padding_between_layout_small"
                        android:paddingBottom="@dimen/padding_between_layout_inner"
                        android:text="@string/edit_profile"
                        android:textColor="@color/blue" />

                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/view_margin"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/padding_between_layout"
                android:layout_marginEnd="@dimen/padding_between_layout"
                android:background="@color/grey"
                app:layout_constraintTop_toBottomOf="@id/layout_profile_header" />

            <LinearLayout
                android:id="@+id/layout_profile_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_between_layout"
                android:layout_marginTop="@dimen/padding_between_layout_small"
                android:layout_marginEnd="@dimen/padding_between_layout"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/view_margin">

                <TextView
                    android:fontFamily="@font/oswald_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_between_layout_inner"
                    android:gravity="start"
                    android:text="@string/profile"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_medium_size" />

                <RelativeLayout
                    android:layout_marginEnd="@dimen/padding_between_layout_small"
                    android:layout_marginStart="@dimen/padding_between_layout_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_between_layout_small">

                    <TextView
                        android:fontFamily="@font/oswald_regular"
                        android:layout_toStartOf="@id/tv_first_name"
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_between_layout_inner"
                        android:gravity="start"
                        android:text="@string/firstName"
                        android:textColor="@color/white_grey"
                        android:textSize="@dimen/text_regular_size" />

                    <TextView
                        android:fontFamily="@font/oswald_regular"
                        android:id="@+id/tv_first_name"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_between_layout_inner"
                        android:gravity="end"
                        android:text="I'm"
                        android:textColor="@color/white_grey"
                        android:textSize="@dimen/text_regular_size" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginEnd="@dimen/padding_between_layout_small"
                    android:layout_marginStart="@dimen/padding_between_layout_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_between_layout_small">

                    <TextView
                        android:fontFamily="@font/oswald_regular"
                        android:layout_toStartOf="@id/tv_last_name"
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_between_layout_inner"
                        android:gravity="start"
                        android:text="@string/lastName"
                        android:textColor="@color/white_grey"
                        android:textSize="@dimen/text_regular_size" />

                    <TextView
                        android:fontFamily="@font/oswald_regular"
                        android:id="@+id/tv_last_name"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_between_layout_inner"
                        android:gravity="end"
                        android:text="Testing"
                        android:textColor="@color/white_grey"
                        android:textSize="@dimen/text_regular_size" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginEnd="@dimen/padding_between_layout_small"
                    android:layout_marginStart="@dimen/padding_between_layout_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_between_layout_small">

                    <TextView
                        android:fontFamily="@font/oswald_regular"
                        android:layout_toStartOf="@id/tv_email"
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_between_layout_inner"
                        android:gravity="start"
                        android:text="@string/email"
                        android:textColor="@color/white_grey"
                        android:textSize="@dimen/text_regular_size" />

                    <TextView
                        android:fontFamily="@font/oswald_regular"
                        android:id="@+id/tv_email"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_between_layout_inner"
                        android:gravity="end"
                        android:text="this@application.com"
                        android:textColor="@color/white_grey"
                        android:textSize="@dimen/text_regular_size" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:id="@+id/view_margin_two"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/padding_between_layout"
                android:layout_marginTop="@dimen/padding_between_layout_small"
                android:layout_marginEnd="@dimen/padding_between_layout"
                android:background="@color/grey"
                app:layout_constraintTop_toBottomOf="@id/layout_profile_details" />

            <RelativeLayout
                android:id="@+id/layout_connect_console"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_between_layout"
                android:layout_marginEnd="@dimen/padding_between_layout"
                android:layout_marginBottom="@dimen/margin_between_layout"
                app:layout_constraintTop_toBottomOf="@id/view_margin_two">

                <LinearLayout
                    android:id="@+id/layout_connect_playstation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_between_layout_medium">

                    <TextView
                        android:fontFamily="@font/oswald_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_between_layout_inner"
                        android:gravity="start"
                        android:text="@string/connect_to_playstation"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_medium_size" />

                    <ImageView
                        android:layout_width="@dimen/plus_circle_width_height"
                        android:layout_height="@dimen/plus_circle_width_height"
                        android:layout_marginStart="@dimen/margin_between_layout_small"
                        android:src="@drawable/add_icon"
                        android:tint="@color/blue" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_connect_xbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_connect_playstation"
                    android:layout_marginTop="@dimen/margin_between_layout_medium">

                    <TextView
                        android:fontFamily="@font/oswald_regular"
                        android:id="@+id/tv_connect_xbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_between_layout_inner"
                        android:gravity="start"
                        android:text="@string/connect_to_xbox"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_medium_size" />

                    <ImageView
                        android:layout_width="@dimen/plus_circle_width_height"
                        android:layout_height="@dimen/plus_circle_width_height"
                        android:layout_marginStart="@dimen/margin_between_layout_small"
                        android:src="@drawable/add_icon"
                        android:tint="@color/blue" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/view_margin_three"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/padding_between_layout"
                android:layout_marginTop="@dimen/margin_between_layout_medium"
                android:layout_marginEnd="@dimen/padding_between_layout"
                android:background="@color/grey"
                app:layout_constraintTop_toBottomOf="@id/layout_connect_console" />

            <RelativeLayout
                android:id="@+id/layout_profile_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_between_layout"
                android:layout_marginTop="@dimen/padding_between_layout_small"
                android:layout_marginEnd="@dimen/padding_between_layout"
                app:layout_constraintTop_toBottomOf="@id/view_margin_three">

                <TextView
                    android:fontFamily="@font/oswald_bold"
                    android:id="@+id/tv_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_between_layout_inner"
                    android:gravity="start"
                    android:text="@string/history"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_medium_size" />

                <TextView
                    android:fontFamily="@font/oswald_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/padding_between_layout_inner"
                    android:text="@string/see_all"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_medium_size" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_history"
                    android:layout_marginTop="@dimen/margin_between_layout_small">

                    <TextView
                        android:fontFamily="@font/oswald_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_between_layout_inner"
                        android:gravity="start"
                        android:text="@string/no_history_available"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small_size"
                        android:textStyle="italic" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/view_margin_four"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/padding_between_layout"
                android:layout_marginTop="@dimen/padding_between_layout_small"
                android:layout_marginEnd="@dimen/padding_between_layout"
                android:background="@color/grey"
                app:layout_constraintTop_toBottomOf="@id/layout_profile_history" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>